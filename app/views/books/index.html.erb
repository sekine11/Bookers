
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "show", book_path(book) %></td>
				<td><%= link_to "edit", edit_book_path(book) %></td>
				<td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<h2>New Book</h2>

<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
		<h2>Errors:</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>

<% end %>