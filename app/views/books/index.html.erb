
<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "show", book_path(book) %></td>
				<td><%= link_to "edit", edit_book_path(book) %></td>
				<td><%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<h2>New Book</h2>

<%= form_for(@book) do |f| %>
	<%= f.error_messages %>

	<div class="field">
		<%= f.label :title, "Title" %>
		<%= f.text_field :title %>
	</div>

	<div class="field">
		<%= f.label :body, "Body" %>
		<%= f.text_area :body %>
	</div>

	<%= f.submit 'Create Book' %>

<% end %>