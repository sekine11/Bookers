<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
		<h2>Errors:</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Update Book' %>

<% end %>

<span><%= link_to "show", book_path(@book) %></span>
<span>|</span>
<span><%= link_to "back", books_path %></span>
